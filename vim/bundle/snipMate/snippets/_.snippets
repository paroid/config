snippet date
	`strftime("%Y-%m-%d")`
snippet date/
	`strftime("%Y/%m/%d")`
snippet ddate
	`strftime("%B %d, %Y")`
snippet time
	`strftime("%Y-%m-%d %H:%M:%S")`
snippet time/
	`strftime("%Y/%m/%d %H:%M:%S")`
snippet week
	`strftime("%A")`
